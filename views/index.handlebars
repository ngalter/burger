<div class="content">
<div class="container">
<div class="row d-flex burger-head justify-content-center">
      <img src="../assets/img/burger.png" class="burger-img">
      <h1 class="burger-head-title">Eat-Da-Burger!</h1>
</div>
</div>
<div class="container">
  <div class="row d-flex burger-uneaten justify-content-center">
    <div class="col-md-6">
      {{!-- ordered but not eaten --}}
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
                  <li class="uneaten">{{id}} - {{burger_name}}  <button type="btn" class="eat burger-btn" id="eatbtn" data-id="{{this.id}}" data-newDevoured="{{devour}}">Devour It!</button> </li>      
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
      {{!-- ordered and eaten --}}
          <ul>
            {{#each burgers}}
              {{#if devoured}}
               {{burgers}}
                    <li class="eaten">
                       <span><strong>{{this.id}} - {{this.burger_name}} </strong></span>
                    </li>
               {{/if}}
              {{/each}}
          </ul>
    </div>
  </div>
</div>
</div>
{{!-- center bottom section --}}
<div class="container burger-foot">
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="text" id="name" name="burger_name">
    <button type="submit" id="newBurger">Add Burger</button>
  </div>
</form>
</div>
</div>